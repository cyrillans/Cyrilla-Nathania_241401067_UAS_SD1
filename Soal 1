#include <bits/stdc++.h>
using namespace std;

int main() {
    int n;
    cin >> n;

    vector<int> p(n+1);
    vector<vector<int>> adj(n+1);

    for (int i = 1; i <= n; i++) {
        cin >> p[i];
        if (p[i] != -1) {
            adj[p[i]].push_back(i);
        }
    }

    int answer = 1;

    function<int(int)> dfs = [&](int x) {
        int depth = 1;
        for (int child : adj[x]) {
            depth = max(depth, 1 + dfs(child));
        }
        return depth;
    };

    for (int i = 1; i <= n; i++) {
        if (p[i] == -1) {           
            answer = max(answer, dfs(i));
        }
    }

    cout << answer;
    return 0;
}

